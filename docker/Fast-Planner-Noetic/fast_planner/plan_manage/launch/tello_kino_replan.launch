<launch>
  <!-- size of map, change the size in x, y, z according to your application -->
  <arg name="map_size_x" value="40.0"/>
  <arg name="map_size_y" value="20.0"/>
  <arg name="map_size_z" value=" 5.0"/>

  <!-- topic of your odometry such as VIO or LIO -->
  <arg name="odom_topic" value="orb_slam/odom" />

  <!-- main algorithm params -->
  <include file="$(find plan_manage)/launch/kino_algorithm_tello.xml">

    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>
    <arg name="odometry_topic" value="$(arg odom_topic)"/>

    <!-- camera pose: transform of camera frame in the world frame -->
    <!-- don't set cloud_topic if you already set these ones! -->
    <arg name="camera_pose_topic" value="orb_slam/fast_planner_pose"/>
    <arg name="depth_topic" value="packnet/depth/image_raw"/>

    <!-- topic of point cloud measurement, such as from LIDAR  -->
    <!-- don't set camera pose and depth, if you already set this one! -->
    <arg name="cloud_topic" value="/pcl_render_node/cloud"/>

    <!-- intrinsic params of the depth camera -->
    <arg name="cx" value="478.91101281"/>
    <arg name="cy" value="337.23547334"/>
    <arg name="fx" value="906.49309229"/>
    <arg name="fy" value="900.26391973"/>

    <!-- Camera.fx: 906.49309229
    Camera.fy: 900.26391973
    Camera.cx: 478.91101281
    Camera.cy: 337.23547334

    Camera.k1: 1.57093748e-01 
    Camera.k2: -1.26058811e+00
    Camera.p1: -8.89369279e-03
    Camera.p2: -2.40124634e-03 -->

    <arg name="k_depth_scaling_factor" value="256"/>
    <!-- disable the downsampling by setting skip_pixel = 1 -->
    <arg name="skip_pixel" value="1"/>

    <!-- maximum velocity and acceleration the drone will reach -->
    <arg name="max_vel" value="3.0" />
    <arg name="max_acc" value="2.0" />

    <!-- 1: use 2D Nav Goal to select goal  -->
    <!-- 2: use global waypoints below  -->
    <arg name="flight_type" value="2" />
    
    <!-- global waypoints -->
    <!-- If flight_type is set to 2, the drone will travel these waypoints one by one -->
    <arg name="point_num" value="2" />

    <arg name="point0_x" value="7.0" />
    <arg name="point0_y" value="0.8" />
    <arg name="point0_z" value="-0.05" />

    <!-- set more waypoints if you need -->
    <arg name="point1_x" value="7.0" />
    <arg name="point1_y" value="0.8" />
    <arg name="point1_z" value="-0.05" />

    <arg name="point2_x" value="7.0" />
    <arg name="point2_y" value="0.8" />
    <arg name="point2_z" value="-0.05" />
    
  </include>

  <!-- trajectory server -->
  <node pkg="plan_manage" name="traj_server" type="traj_server" output="screen">
    <remap from="/position_cmd" to="planning/pos_cmd"/>

    <remap from="/odom_world" to="$(arg odom_topic)"/>
    <param name="traj_server/time_forward" value="1.5" type="double"/>
  </node>

  <node pkg="waypoint_generator" name="waypoint_generator" type="waypoint_generator" output="screen">
    <remap from="~odom" to="$(arg odom_topic)"/>        
    <remap from="~goal" to="/move_base_simple/goal"/>
    <remap from="~traj_start_trigger" to="/traj_start_trigger" />
    <param name="waypoint_type" value="manual-lonely-waypoint"/>    
  </node>

</launch>